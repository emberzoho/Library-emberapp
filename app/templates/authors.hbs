{{outlet}}


<div class="container mb-5">
  <button type="button"  class="btn btn-outline-secondary btn-sm p-2" style="margin-left: 375px;" data-toggle="modal" data-target="#newauthormodal">ADD ENTRY</button>
  <button type="button" class="btn btn-secondary btn-sm p-2" style="margin-left: 45px; margin-right:350px;">DELETE ENTRY</button>
</div>

<div class="modal" id="newauthormodal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">NEW AUTHOR DETAILS</h5>
        <button type="button" class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
      </div>
      <div class="modal-body">
      	<div class="container">
  			<form class="form-horizontal">
  				<div class="form-group">
      				
      					<div class="col-sm-10">
        					{{input type="text" class="form-control" id="authorid" value=authorid placeholder="Enter author ID" name="authorid"}}
      					</div>
    			</div>
    			<div class="form-group">
      				
      					<div class="col-sm-10">
        					{{input type="text" class="form-control" id="authorname" value=authorname placeholder="Enter author name" name="authorname"}}
      					</div>
    			</div>
    			<div class="form-group">
      				
      					<div class="col-sm-10">
        					{{input type="text" class="form-control" id="country" value=country placeholder="Enter country" name="country"}}
      					</div>
    			</div>
    			<div class="form-group">
      				
      					<div class="col-sm-10">
        					{{input type="text" class="form-control" value=books id="books" placeholder="Enter books" name="books"}}
      					</div>
   				</div>
    			<div class="form-group">        
      				<div class="col-sm-offset-2 col-sm-10">
        				<button {{action 'addAuthor'}} class="btn btn-primary">Submit</button>
      				</div>
    			</div>
  			</form>
		</div>
	</div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>



<div class="container">
    <table class="table table-striped">
        <thead>
          <tr>
          <th>AUTHOR ID</th>
          <th>AUTHOR NAME</th>
          <th>COUNTRY</th>
          <th>BOOKS</th>
          </tr>
        </thead>
        {{#each this.model as |author|}}
        	<!-- <BookListing @book={{bookUnit}} /> -->
        	<tr>
		    	<td>{{author.authorid}}</td>
			    <td>{{author.authorname}}</td>
			    <td>{{author.country}}</td>
			    <td>{{author.books}}</td>
			</tr>
			
		{{/each}}
	</table>
</div>
